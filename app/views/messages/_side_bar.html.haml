.side-bar
  .side-bar__top
    .side-bar__top__box
      %h3.side-bar__top__box__name
        = current_user.name
      %ul.side-bar__top__box__icons
        %li.side-bar__top__box__icons__edit
          =link_to new_group_path do
            = icon('fa', 'edit')
        %li.side-bar__top__box__icons__new-group
          =link_to edit_user_path(current_user) do
            = icon('fa', 'cog')
  .side-bar__bottom
    - current_user.groups.each do |group|
      .side-bar__bottom__group
        = link_to group_messages_path(group), class: "link" do
          .side-bar__bottom__group__name
            = group.name
          .side-bar__bottom__group__latest-message
            = group.show_last_message
